{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/session-start.wav"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/stop.wav"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/permission-request.wav"
          }
        ]
      },
      {
        "matcher": "idle_prompt|auth_success",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/notification.wav"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/post-tool-use-failure.wav"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/permission-request.wav"
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/task-completed.wav"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/play-sound.sh ~/.claude/sounds/session-end.wav"
          }
        ]
      }
    ]
  }
}
